<div class="top-row pl-4 navbar navbar-dark">
    <img src="img/GoVote_Logo7_F.png" class="img" alt="LogoTop" height="40">
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="electionmgmt" Match="NavLinkMatch.All">
                <span class="oi oi-clipboard" aria-hidden="true"></span> Election Management
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="voting" Match="NavLinkMatch.All">
                <span class="oi oi-task" aria-hidden="true"></span> Voting
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="results" Match="NavLinkMatch.All">
                <span class="oi oi-bar-chart" aria-hidden="true"></span> Election Results
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
