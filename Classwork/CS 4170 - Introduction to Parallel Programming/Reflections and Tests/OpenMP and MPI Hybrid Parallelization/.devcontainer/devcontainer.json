// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.163.1/containers/alpine
{
	"image": "rgreen13/alpine-bash-gpp",
    "mounts": [
        // Change directories to accomodate your own SSH directory so that you can
        // use Git/Gitlab/Github with SSH inside the Docker Container
        "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=delegated"
      ]
}