import scala.io.Source
import scala.io.StdIn.readLine

object Task2 {
    def main (args:Array[String]){
      
      println("Enter the name of the file: ")
      val input = readline()
      val ruby1 = input.contains(Ruby)
      val ruby2 = input.contains(ruby)
      val scala1 = input.contains(Scala)
      val scala2 = input.contains(scala)
      
      if(ruby1 || ruby2)
      {
        println(â€œThe file content is not interesting")
      }
      
      if(scala1 || scala2)
      {
        println("The file content is interesting")
      }
      
      if(!ruby1 && !ruby2 && !scala1 && !scala2)
      {
        println("The file is meaningless")
      }
      
      }
}
